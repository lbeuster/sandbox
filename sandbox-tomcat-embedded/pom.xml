				<type>pom</type>
				<scope>import</scope>
			</dependency>
			<dependency>
				<groupId>de.lbe.maven.boms</groupId>
				<artifactId>tomcat7-bom</artifactId>
				<version>${lbe-maven-boms.version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>

