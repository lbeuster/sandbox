<configuration debug="true">

	<property scope="system" name="appender" value="1" />

	<if condition='isDefined("celepedia")'>
		<then>
			<property scope="system" name="splunk-host" value="${SPLUNK_HOST:-logging-splunk1.s.asideas.de}" />
			<property scope="system" name="splunk-port" value="${SPLUNK_PORT:-9995}" />
		</then>
		<else>
			<property scope="system" name="splunk-host" value="${SPLUNK_HOST:-splunk.asv.local}" />
			<property scope="system" name="splunk-port" value="${SPLUNK_PORT:-9997}" />
		</else>
	</if>

	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%date{yyyy-MM-dd HH:mm:ss.SSS Z} level=%level thread=%thread %m%n{}</pattern>
		</encoder>
	</appender>

	<if condition='isDefined("appender2")'>
		<then>
			<appender name="splunk" class="de.lbe.sandbox.splunk.SplunkAppender2">
				<!-- <host>logging-splunk1.s.asideas.de</host> -->
				<!-- <port>9995</port> -->
				<host>${splunk-host}</host>
				<port>${splunk-port}</port>
				<layout>
					<pattern>%date{yyyy-MM-dd HH:mm:ss.SSS Z} APPENDER2 level=%level thread=%thread app=larstest %m%n</pattern>
				</layout>
			</appender>
		</then>
		<else>
			<appender name="splunk" class="de.lbe.sandbox.splunk.SplunkAppender1">
				<!-- <host>logging-splunk1.s.asideas.de</host> -->
				<!-- <port>9995</port> -->
				<host>${splunk-host}</host>
				<port>${splunk-port}</port>
				<layout>
					<pattern>%date{yyyy-MM-dd HH:mm:ss.SSS Z} APPENDER1 level=%level thread=%thread app=larstest %m%n</pattern>
				</layout>
			</appender>
		</else>
	</if>

	<logger name="larstest" level="info" />

	<root level="warn">
		<appender-ref ref="console" />
		<appender-ref ref="splunk" />
	</root>

</configuration>
