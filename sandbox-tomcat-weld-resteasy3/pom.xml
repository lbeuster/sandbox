	<artifactId>sandbox-tomcat-weld-resteasy3</artifactId>

	<dependencyManagement>
		<dependencies>

			<dependency>
				<groupId>de.asideas.maven.boms</groupId>
				<artifactId>commons-bom</artifactId>
				<version>${asideas-maven-boms.version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
			<dependency>
				<groupId>de.asideas.maven.boms</groupId>
				<artifactId>tests-bom</artifactId>
				<version>${asideas-maven-boms.version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
			<dependency>
				<groupId>de.asideas.maven.boms</groupId>
				<artifactId>tomcat7-bom</artifactId>
				<version>${asideas-maven-boms.version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
			<dependency>
				<groupId>de.asideas.maven.boms</groupId>
